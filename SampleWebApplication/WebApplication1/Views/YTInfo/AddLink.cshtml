@model MyWebApplication.Models.ViewModel.YTInfoModel
@{
    ViewBag.Title = "AddLink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Download Video</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.YTLink, htmlAttributes: new { @class =
        "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YTLink, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter YouTube Link" } })
                @Html.ValidationMessageFor(model => model.YTLink, "", new { @class =
            "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.YTTitle, htmlAttributes: new { @class =
        "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YTTitle, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter youtube title" } })
                @Html.ValidationMessageFor(model => model.YTTitle, "", new { @class = "text-danger"
            })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.YTUploader, htmlAttributes: new { @class =
        "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YTUploader, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter uploader name" } })
                @Html.ValidationMessageFor(model => model.YTUploader, "", new { @class = "text-danger"
            })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Download" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to Main", "Index","Home")
</div>
